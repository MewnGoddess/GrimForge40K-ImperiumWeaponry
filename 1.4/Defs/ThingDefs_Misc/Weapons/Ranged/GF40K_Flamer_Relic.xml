<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>GF40K_RelicFlamer</defName>
        <label>relic flamer</label>
		<tradeNeverStack>true</tradeNeverStack>
		<relicChance>3</relicChance>
        <description>TThe Flamer is any type of incendiary weapon that sprays an area with an extremely flammable liquid/gas known collectively as Prometheum, burning everything it sticks on. It is a short-range weapons, designed to be brutally effective against unarmoured targets and is ideal for situations that require crowd control. It is also a very useful tool in situations that require clearing out reinforced positions, such as trenches, pillboxes and bunkers.\n\n This particular weapon was sanctified in one of the temples of Ecclesiarchy, so that it can bring the Emperor's light in more ways than one.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/Relic/Flamer_relic</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.5</uiIconScale>
        <soundInteract>Interact_Rifle</soundInteract>
        <tradeTags>
            <li>GF40K_RangedSpecial</li>
			<li>GF40K_ImperiumRanged</li>
        </tradeTags>
		<equippedAngleOffset Inherit="False">45</equippedAngleOffset>
        <weaponTags>
            <li>ImperiumRangedFlamer</li>
        </weaponTags>
        <costList>
            <Steel>69</Steel>
			<Plasteel>72</Plasteel>
			<ComponentSpacer>6</ComponentSpacer>
        </costList>
        <statBases>
            <Mass>11</Mass>
            <AccuracyTouch>0.99</AccuracyTouch>
            <AccuracyShort>1</AccuracyShort>
            <AccuracyMedium>0.63</AccuracyMedium>
            <AccuracyLong>0.3</AccuracyLong>
            <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
        </statBases>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>GF40K_RelicFlamerBullet</defaultProjectile>
                <warmupTime>0.9</warmupTime>
                <range>21.9</range>
                <!--forcedMissRadius>0.2</forcedMissRadius-->
				<burstShotCount>3</burstShotCount>
				<ticksBetweenBurstShots>12</ticksBetweenBurstShots>
                <!--soundCast>Shot_Autopistol</soundCast-->
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
				<targetParams>
				  <canTargetLocations>true</canTargetLocations>
				</targetParams>
            </li>
        </verbs>
        <tools>
            <li>
                <label>grip</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
		<comps Inherit="False">
			<li>
				<compClass>CompEquippable</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtWeaponGun</nameMaker>
				<descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
			</li>  
			<li Class="CompProperties_Forbiddable"/>      
			<li Class="CompProperties_Styleable"/>
		</comps>
    </ThingDef>
	
	<VFECore.ExpandableProjectileDef ParentName="BaseBullet">
		<defName>GF40K_RelicFlamerBullet</defName>
		<label>flamer's flame</label>
		<thingClass>VFECore.FlamethrowProjectile</thingClass>
		<graphicData>
			<texPath>Things/Projectile/Substitute/Proj_HeavyFlamer</texPath>
			<texPathFadeOut>Things/Projectile/Substitute/Proj_HeavyFlamerFadeOut</texPathFadeOut>
			<shaderType>MoteGlow</shaderType>
		</graphicData>
		<projectile>
			<damageDef>Flame</damageDef>
			<speed>45</speed>
			<damageAmountBase>14</damageAmountBase>
		</projectile>
		
		<drawOffscreen>true</drawOffscreen>
		<lifeTimeDuration>35</lifeTimeDuration>
		<widthScaleFactor>0.85</widthScaleFactor>
		<heightScaleFactor>1</heightScaleFactor>
		<startingPositionOffset>(0, 0, -1)</startingPositionOffset>
		<totalSizeScale>1.15</totalSizeScale>
		<tickFrameRate>2</tickFrameRate>
		<finalTickFrameRate>5</finalTickFrameRate>
		<tickDamageRate>20</tickDamageRate>
		<dealsDamageOnce>true</dealsDamageOnce>
		<minDistanceToAffect>2</minDistanceToAffect>
	</VFECore.ExpandableProjectileDef>
</Defs>
